{
  "$schema": "https://github.com/Azure/data-api-builder/releases/latest/download/dab.draft.schema.json",
  "data-source": {
    "database-type": "mssql",
    "options": {
      "set-session-context": false,
      "server": "salyersaipmapp.database.windows.net",
      "database": "ProjectManageApp",
      "authentication": "AzureAD"
    }
  },
  "runtime": {
    "rest": {
      "enabled": true,
      "path": "/api/data"
    },
    "graphql": {
      "allow-introspection": true,
      "enabled": true,
      "path": "/api/graphql"
    },
    "host": {
      "mode": "production",
      "cors": {
        "origins": ["http://localhost:4280", "https://victorious-field-05d13d20f.6.azurestaticapps.net"],
        "allow-credentials": false
      },
      "authentication": {
        "provider": "StaticWebApps"
      }
    }
  },
  "entities": {
    "Projects": {
      "source": "dbo.Projects",
      "permissions": [
        {
          "actions": ["*"],
          "role": "anonymous"
        }
      ],
      "relationships": {
        "Tasks": {
          "cardinality": "many",
          "target.entity": "Tasks",
          "linking.object": "ProjectId",
          "linking.target": "ProjectId"
        }
      },
      "rest": {
        "methods": ["get", "post", "put", "delete", "patch"]
      }
    },
    "Tasks": {
      "source": "dbo.Tasks",
      "permissions": [
        {
          "actions": ["*"],
          "role": "anonymous"
        }
      ],
      "relationships": {
        "Project": {
          "cardinality": "one",
          "target.entity": "Projects",
          "linking.object": "ProjectId",
          "linking.target": "ProjectId"
        }
      },
      "rest": {
        "methods": ["get", "post", "put", "delete", "patch"]
      }
    },
    "CreateProject": {
      "source": "dbo.CreateProject",
      "rest": {
        "methods": ["post"]
      },
      "permissions": [
        {
          "actions": ["execute"],
          "role": "anonymous"
        }
      ]
    },
    "UpdateProject": {
      "source": "dbo.UpdateProject",
      "rest": {
        "methods": ["post"]
      },
      "permissions": [
        {
          "actions": ["execute"],
          "role": "anonymous"
        }
      ]
    }
  }
} 